extends ./application.pug

block content
  .container.col-md-4.float-xs-right
      h3 About this blog
      ul.nav.nav-tabs.nav-stacked
        li
          a(href='#') Contact us
        li
          a(href='#') More info
        li
          a(href='#') Another Link

        p This is a blog about my trip to Amsterdam. You can make an account, make posts, comments and edit or delete your posts!

  .container.col-md-8
    .row
      .col-xs-8.offset-xs-2
        h1 All posts from this blog
        hr
        each blogPost in blogPosts
          .card.card-block
            .col-xs-12.col-md-8
            .col-md-8
              a(href="/" + blogPost.slug)
                h2= blogPost.title
                h2= blogPost.UserId

              p= blogPost.content
    noscript
      link(rel='stylesheet', href='../css/skel.css')
      link(rel='stylesheet', href='../css/style.css')
      link(rel='stylesheet', href='../css/style-wide.css')
      link(rel='stylesheet', href='../css/style-normal.css')
    meta(http-equiv='content-type', content='text/html; charset=utf-8')
    meta(name='description', content='')
    meta(name='keywords', content='')
    script(src='../js/jquery.min.js')
    script(src='../js/jquery.poptrox.min.js')
    script(src='../js/jquery.scrolly.min.js')
    script(src='../js/jquery.scrollex.min.js')
    script(src='../js/skel.min.js')
    script(src='../js/init.js')
  body
    header#header
      nav#nav
        ul
          li
            a(href='#intro') Intro
          li
            a(href='#one') Login
          li
            a(href='#two') Register
          li
            a(href='#work') See more
          // <li><a href="#contact">Contact</a></li>
    // Intro
    section#intro.main.style1.dark.fullscreen
      .content.container(class='75%')
        header
          h2(style='font-size:100pt;') ScienceMotion
          h2(style='font-size:100pt;')
          p Learn about key theories of biology, chemistry and phsyics through animation. 
        footer
          a.button.style2.down(href='#work') More
  
    section#work.main.style3.primary
      .content.container
        header
          h2 See more
          p Click the links to see more.
        .container.gallery(class='75%')
          .row.images(class='0%')
						div.6u
              a.image.fit.from-left(href='eye/index.html')
                img(src='images/thumbs/01.jpg', title='The Anonymous Red', alt='')
						div.6u
              a.image.fit.from-right(href='diffusion/index.html')
                img(src='images/thumbs/02.jpg', title='Airchitecture II', alt='')
          .row.images(class='0%')
						div.6u
              a.image.fit.from-left(href='sound_waves/index.html')
                img(src='images/thumbs/03.jpg', title='Air Lounge', alt='')
            div.6u
              a.image.fit.from-right(href='eye/index.html')
                img(src='images/thumbs/04.jpg', title='Carry on', alt='')
          .row.images(class='0%')
          	div.6u
              a.image.fit.from-left(href='images/fulls/05.jpg')
                img(src='images/thumbs/05.jpg', title='The sparkling shell', alt='')
            div.6u
              a.image.fit.from-right(href='images/fulls/06.jpg')
                img(src='images/thumbs/06.jpg', title='Bent IX', alt='')

    footer#footer
      ul.actions
        li
          a.icon.fa-twitter(href='#')
            span.label Twitter
        li
          a.icon.fa-facebook(href='#')
            span.label Facebook
        li
          a.icon.fa-google-plus(href='#')
            span.label Google+
        li
          a.icon.fa-dribbble(href='#')
            span.label Dribbble
        li
          a.icon.fa-pinterest(href='#')
            span.label Pinterest
        li
          a.icon.fa-instagram(href='#')
            span.label Instagram
    
