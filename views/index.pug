extends ./application.pug

block content

  body
    section#intro.main.style1.dark.fullscreen
      .content.container(class='75%')
        header
          h2(style='font-size:100pt;') ScienceMotion
          h2(style='font-size:100pt;')
          p Learn about key theories of biology, chemistry and phsyics through animation. 
        footer
          a.button.style2.down(href='#work') More
  
    section#work.main.style3.primary
      .content.container
        header
          h2 See more
          p Click the links to see more.
          .container.col-md-8
            .row
              .col-xs-8.offset-xs-2
                .col-md-8
                  a(href="/eye")
                    p eye
                  a(href="/diffusion")
                    p diffusion
                  a(href="/sound_waves")
                    p sound waves
                        
      section#blog.main.style3.primary
        .content.container
          header
            .container.col-md-8
              .row
                .col-xs-8.offset-xs-2
                  h1 Blog posts
                  hr
                  each blogPost in blogPosts
                    .card.card-block
                      .col-xs-12.col-md-8
                      .col-md-8
                        a(href="/" + blogPost.slug)
                          p= blogPost.title
                          p= blogPost.UserId
                          p= blogPost.content
                    

    footer#footer
      ul.actions
        li
          a.icon.fa-twitter(href='#')
            span.label Twitter
        li
          a.icon.fa-facebook(href='#')
            span.label Facebook
        li
          a.icon.fa-google-plus(href='#')
            span.label Google+
        li
          a.icon.fa-dribbble(href='#')
            span.label Dribbble
        li
          a.icon.fa-pinterest(href='#')
            span.label Pinterest
        li
          a.icon.fa-instagram(href='#')
            span.label Instagram
    
